{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/",
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "webworker"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}